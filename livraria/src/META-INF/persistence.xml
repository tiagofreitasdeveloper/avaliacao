<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="livraria" transaction-type="JTA">
		<description>App</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/PostgreSQLDS</jta-data-source>
		
		

		<class>br.com.prova.livraria.modelo.Usuario</class>
		<class>br.com.prova.livraria.modelo.Perfil</class>
		<class>br.com.prova.livraria.modelo.Livro</class>
		<class>br.com.prova.livraria.modelo.Autor</class>

		<properties>
			 <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			 <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/livrariaAvanade" ></property>
			 <property name="javax.persistence.jdbc.user" value="postgres" />
			 <property name="javax.persistence.jdbc.password" value="root" />
			 <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />			

			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>